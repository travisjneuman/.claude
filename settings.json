      "SlashCommand(/commit-commands:*)",
      "SlashCommand(/feature-dev:*)",
      "SlashCommand(/pr-review-toolkit:*)",
      "Bash(git add:*)",
      "Bash(git rm:*)",
      "Bash(git commit:*)",
      "Bash(git worktree:*)",
      "Bash(git fetch:*)",
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(git show:*)",
      "Bash(test:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm install:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm audit:*)",
      "Bash(npm ci:*)",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(uv:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(pytest:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(gh:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(find:*)",
      "Bash(findstr:*)",
      "Bash(tree:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(powershell -Command:*)",
      "Bash(Get-ChildItem:*)",
      "Bash(Get-NetTCPConnection:*)",
      "Bash(Select-Object:*)",
      "Bash(ForEach-Object:*)",
      "Bash(Format-Table:*)",
      "Skill(tech-debt-analyzer)",
      "Skill(debug-like-expert)",
      "Skill(generic-code-reviewer)",
      "Skill(generic-feature-developer)",
      "Skill(test-specialist)",
      "Skill(codebase-documenter)",
      "WebSearch",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:awesomeclaude.ai)",
      "WebFetch(domain:docs.claude.com)",
      "WebFetch(domain:claudemarketplaces.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:registry.modelcontextprotocol.io)",
      "WebFetch(domain:mcpservers.org)",
      "WebFetch(domain:mcpcat.io)",
      "WebFetch(domain:modelcontextprotocol.io)",
      "WebFetch(domain:react.dev)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:typescriptlang.org)",
      "WebFetch(domain:nodejs.org)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:github.com)",
      "mcp__memory__*",
      "mcp__filesystem__read_file",
      "mcp__filesystem__list_directory",
      "mcp__sqlite__read_query",
      "mcp__sequential-thinking__*"
    ],
    "deny": [
      "mcp__filesystem__write_file",
      "mcp__filesystem__delete_file"
    ],
    "ask": [],
    "defaultMode": "bypassPermissions"
  },
  "enableAllProjectMcpServers": false,
  "disabledMcpjsonServers": [
    "sequential-thinking",
    "playwright",
    "memory",
    "filesystem",
    "sqlite",
    "context7",
    "chrome-devtools",
    "puppeteer",
    "browserbase"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/session-start-pull.sh",
            "statusMessage": "Pulling repos in background"
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/session-start-context.sh",
            "statusMessage": "Loading previous session context"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/session-stop-summary.sh",
            "statusMessage": "Saving session summary"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/prompt-context.sh",
            "statusMessage": "Injecting git context"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/guard-dangerous.sh",
            "statusMessage": "Checking command safety"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/format-code.sh",
            "statusMessage": "Auto-formatting"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "explanatory-output-style@claude-code-plugins": false,
    "learning-output-style@claude-code-plugins": false,
    "frontend-design@claude-code-plugins": true,
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": false,
    "taches-cc-resources@taches-cc-resources": true,
    "claude-opus-4-5-migration@claude-code-plugins": false,
    "hookify@claude-code-plugins": false,
    "plugin-dev@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": false,
    "superpowers@obra-superpowers": true
  },
  "outputStyle": "default",
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "model": "opus"
}
